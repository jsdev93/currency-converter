{
  "manifest_version": 3,
  "name": "Live Currency Converter (JPY to USD)",
  "version": "1.0.0",
  "description": "Real-time currency conversion from Japanese Yen to US Dollar as you type",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://api.exchangerate-api.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Live Currency Converter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}